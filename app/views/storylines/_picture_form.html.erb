 <div class="input-group">
  <!-- begin sketch -->
  <div id='color_drawing'>
    <div class='tools'>
    </div>
    <canvas id='drawing' width='400' height='300'></canvas>
  </div>
  <!-- end sketch -->
 
  <%= form_for(@picture) do |f| %>
    <%= f.hidden_field :image %>
    <%= hidden_field_tag :storyline_id, @storyline.id %>
    <%= hidden_field_tag :turn_number, @turn %>
    <%#= hidden_field_tag :user_id, current_user.id %>
    <button type="button" id="clear" class="btn btn-default">
      <i class="fa fa-fast-backward"></i> start over
    </button>
    <button type="submit" id="submit_button" class="btn btn-default">
      <i class="fa fa-plus"></i> add picture
    </button>
  <% end %>
</div>

