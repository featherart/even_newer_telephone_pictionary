<div class="input-group" id="show_story">
  <h1><%= @storyline.story_name %></h1>
    <% @phrases = Phrase.where(storyline_id: @storyline.id) %>
    <% @pictures = Picture.where(storyline_id: @storyline.id) %>    
    <% @pictures.each_with_index do |picture, index| %>
      <h1><small><%= @phrases[index].text %></h1></small>
      <img src='<%= picture.image %>'>     
    <% end %>
</div>
<div>
  <button id="play_button" class="btn btn-success">
    <i class="fa fa-phone-square"></i> 
    <i class="fa fa-picture-o"></i> play
  </button>
</div>