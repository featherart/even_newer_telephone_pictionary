<div class="input-group">
<%= form_for(@phrase) do |f| %>
    <div class="input-group input-group-lg">
    <%= f.text_field :text, size: "50", class: "form-control", placeholder: "enter phrase here", autofocus: true, required: true %></br>
     <% if current_user %>
        <%= f.text_field :name, size: "50", class: "form-control",placeholder: "#{current_user.name}" %>
        <%= hidden_field_tag :phrase_name, current_user.name %></br>
    <% else %>
        <%= f.text_field :name, size: "50", class: "form-control",placeholder: "enter your name to sign" %></br>
    <% end %>
    </div>
    <%= hidden_field_tag :storyline_id, @storyline.id %>
    <%= hidden_field_tag :turn_number, @turn %>
    <br> 
    <button type="submit" id="submit" class="btn btn-default">
      <i class="fa fa-plus"></i> add phrase
    </button>

<% end %>

</div>