<div class="input-group">
<%= form_for(@phrase) do |f| %>
    <div class="input-group input-group-lg">
    <%= f.text_field :text, class: "form-control", placeholder: "enter phrase here", autofocus: true, required: true %>
    </div>
    <%= hidden_field_tag :storyline_id, @storyline.id %>
    <%= hidden_field_tag :turn_number, @turn %>
    <%#= hidden_field_tag :user_id, current_user.id %>
    <br> 
    <button type="submit" id="submit" class="btn btn-default"><span class="glyphicon glyphicon-plus"></span> add phrase</button>

<% end %>

</div>